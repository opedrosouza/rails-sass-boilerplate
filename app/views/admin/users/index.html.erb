<%= page_title("All Users") %>
<%= page_actions do %>
  <%= link_to "New", new_admin_user_path, class: "btn btn-primary" %>
<% end %>

<%= form_with model: @users, url: admin_users_path, method: :get, class: "mb-5 flex items-center" do |f| %>
  <%= text_field_tag :search, {}, class: "form-control md:w-1/2 py-2", placeholder: "Search users" %>
  <%= submit_tag "Search", class: "btn btn-primary ml-2" %>
<% end %>

<ul role="list" class="divide-y divide-gray-100 dark:divide-gray-600 overflow-hidden bg-white dark:bg-gray-800 shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
  <%- @users.each do |user| %>
    <%= render "user", user: user %>
  <% end %>
</ul>

<%= pagination(@pagy) %>
