<%= content_for :page_title, "Crie sua senha" %>
<%= content_for :page_other_action do %>
  <p class="mt-2 text-center text-sm text-gray-600">
    Bem vindo, <%= resource.full_name %>, crie sua senha e não compartilhe este link com ninguém.
  </p>
<% end %>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
    <div class="field">
      <%= f.label :password, "Informe sua senha", class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="field mt-4">
      <%= f.label :password_confirmation, "Confirme sua senha", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Continuar", class: "form-submit" %>
  </div>
<% end %>
