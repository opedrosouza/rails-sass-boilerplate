<%= content_for :page_title, "Esqueceu sua senha?" %>
<%= content_for :page_other_action do %>
  <p class="mt-2 text-center text-sm text-gray-600">
    Ou <%= link_to "Entre em sua conta", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
  <div class="field">
    <%= f.label :email, "Informe seu e-mail", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Criar nova senha", class: "form-submit" %>
  </div>
<% end %>
