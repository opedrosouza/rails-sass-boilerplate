<%= content_for :page_title, "Crie sua conta" %>
<%= content_for :page_other_action do %>
  <p class="mt-2 text-center text-sm text-gray-600">
    <%= link_to "JÃ¡ possui uma conta? Entre agora.", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
  <%= render "auth/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "Informe seu e-email", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field mt-4">
    <%= f.label :password, "Informe sua senha", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field mt-4">
    <%= f.label :password_confirmation, "Confirme sua senha", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "Criar conta", class: "form-submit" %>
  </div>
<% end %>
