<%= content_for :page_title, "Entre em sua conta" %>
<%= content_for :page_other_action do %>
  <p class="mt-2 text-center text-sm text-gray-600">
    Ou <%= link_to "Crie uma conta gratuitamente", new_registration_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
  <div class="field">
    <%= f.label :email, "Informe seu e-mail", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field mt-4">
    <%= f.label :password, "Informe sua senha", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center justify-between mt-4">
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "form-check" %>
        <%= f.label :remember_me, "Lembre-se de mim", class: "form-label ml-2" %>
      </div>

      <div class="text-sm">
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "form-link" %>
      </div>
    </div>
  <% end %>

  <div class="actions mt-4">
    <%= f.submit "Entrar", class: "form-submit" %>
  </div>
<% end %>

